@using AhmedSherien.Application.Companies.Queries.GetCompaniesList
@model List<CompanyModel>
@{ 
    ViewBag.Title = "Companies List";
}
<h1>Companies</h1>
@if (Model.Any())
{
    foreach (var company in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <h3>@company.Name</h3>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body text-center">
                    <strong>There are no companies yet!</strong>
                </div>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <a asp-area="" asp-controller="Companies" asp-action="Create" class="btn btn-block btn-success">Create a Company</a>
    </div>
</div>